<p id="notice"><%= notice %></p>

<h1>Groups</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Member</th>
      <th>Debut date</th>
      <th>Gender</th>
      <th>Total Events</th>
      <th>Part. Per Event</th>
      <th>Concert ID</th>
      <th>Concert Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.name %></td>
        <td><%= group.member %></td>
        <td><%= group.debut_date %></td>
        <td><%= group.gender %></td>
        <td><%= group.events_count %></td>
        <td>
          <ul>
            <% group.events.each do |event| %>
              <li><%= event.participant %></li>
            <% end %>
          </ul>
        </td>
        <td>
          <ul>
            <% group.events.each do |event| %>
              <li><%= event.id %></li>
            <% end %>
          </ul>
        </td>
        <td>
          <ul>
            <% group.events.each do |event| %>
              <li><%= event.date %></li>
            <% end %>
          </ul>
        </td>
        <td><%= link_to 'Show', group %></td>
        <td><%= link_to 'Edit', edit_group_path(group) %></td>
        <td><%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Go to events', events_path %>

